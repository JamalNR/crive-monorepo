{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":semanticCommits"],
  "timezone": "Asia/Jakarta",
  "schedule": ["after 02:00 and before 05:00 every weekday"],
  "labels": ["dependencies", "renovate"],
  "prConcurrentLimit": 5,
  "rebaseWhen": "behind-base-branch",
  "rangeStrategy": "bump",
  "npm": { "pnpm": { "enabled": true } },

  "packageRules": [
    { "matchDepTypes": ["devDependencies"], "matchUpdateTypes": ["minor", "patch"], "automerge": true },
    { "matchDepTypes": ["dependencies"], "matchUpdateTypes": ["patch"], "automerge": true },
    { "groupName": "pnpm workspace minor/patch", "matchUpdateTypes": ["minor","patch"], "matchManagers": ["npm"], "matchPaths": ["apps/**","packages/**"] }
  ]
}
