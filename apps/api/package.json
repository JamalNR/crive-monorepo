{
  "name": "api",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts,.tsx,.js --max-warnings=0 --no-error-on-unmatched-pattern",
    "lint:fix": "pnpm run lint -- --fix",
    "format": "prettier --write .",
    "test": "vitest run --coverage || echo \"no tests\"",
    "test:ci": "pnpm run test",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^20.19.11",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@crive/shared": "workspace:*",
    "express": "^4.21.2"
  }
}
