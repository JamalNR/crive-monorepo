{
  "name": "api",
  "version": "1.0.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "db:format": "prisma format",
    "db:validate": "prisma validate",
    "db:generate": "prisma generate",
    "db:validate:stg": "doppler run --config stg -- prisma validate",
    "db:generate:stg": "doppler run --config stg -- prisma generate"
  },
  "dependencies": {
    "@crive/shared": "workspace:*",
    "@prisma/client": "^6.15.0",
    "bcryptjs": "^3.0.2",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.23",
    "@types/node": "^20.19.11",
    "eslint": "^9.9.0",
    "prisma": "^6.15.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}
