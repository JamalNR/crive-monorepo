{
  "name": "crive-monorepo",
  "private": true,
  "packageManager": "pnpm@10.14.0",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "build": "pnpm -r run build",
    "lint": "pnpm -r run lint || true",
    "clean": "pnpm -r run clean || true && rm -rf node_modules pnpm-lock.yaml",
    "typecheck": "pnpm -r run typecheck || true",
    "env:check:stg": "doppler run --project crive --config stg -- node scripts/validate-env.mjs apps/api apps/admin",
    "env:check:prd": "doppler run --project crive --config prd -- node scripts/validate-env.mjs apps/api apps/admin",
    "check:env:local": "node scripts/check-env.js",
    "check:env:ci": "node scripts/check-env.js --ci",
    "prepare": "husky",
    "deps:audit:prod": "pnpm audit --prod",
    "deps:dedupe": "pnpm -w dedupe",
    "deps:unused": "depcheck --ignores=eslint,husky,typescript",
    "deps:sbom": "pnpm dlx @cyclonedx/cyclonedx-npm --json --output-file sbom.json",
    "deps:licenses": "pnpm dlx license-checker-rseidelsohn --production --summary",
    "deps:verify": "pnpm -v && node -v"
  },
  "devDependencies": {
    "@eslint/js": "8.57.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "globals": "^13.24.0",
    "husky": "^9.1.7",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">= 24.6.0",
    "pnpm": ">= 10.14.0"
  },
  "pnpm": {
    "overrides": {}
  }
}